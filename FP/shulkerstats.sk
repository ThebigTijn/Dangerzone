local function armor(i: item) :: number:
    set {_lore::*} to lore of {_i}
    loop {_lore::*}:
        loop-value contains "Armor"
        set {_a} to loop-value
    set {_b::*} to {_a} split at "+"
    set {_a} to {_b::2} parsed as number
    return {_a}

local function health(i: item) :: number:
    set {_lore::*} to lore of {_i}
    loop {_lore::*}:
        loop-value contains "Max Health"
        set {_a} to loop-value
    set {_b::*} to {_a} split at "+"
    set {_a} to {_b::2} parsed as number
    return {_a}


local function speed(i: item) :: number:
    set {_lore::*} to lore of {_i}
    loop {_lore::*}:
        loop-value contains "Movement Speed"
        set {_a} to loop-value
    set {_b::*} to {_a} split at ": "
    replace all "%%" in {_b::2} with ""
    replace all "+" in {_b::2} with ""
    set {_a} to {_b::2} parsed as number
    return {_a}


local function prot(i: item) :: number:
    return protection level of {_i}

local function proj(i: item) :: number:
    return projectile protection level of {_i}

local function fire(i: item) :: number:
    return fire protection level of {_i}


